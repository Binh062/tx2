@model TrieuTruongGiang_2021603645.Models.HocSinh

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Bạn có muốn xóa học sinh này không?</h3>
<div>
    <h4>Hoc Sinh</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên

        <dd>
            @Html.DisplayFor(model => model.hoten)
        </dd>

        <dt>
            Ảnh dự thi
        </dt>

        <dd>

            <img src="~/Images/Images/@Html.DisplayFor(model => model.anhduthi)" style="width: 120px; height: 120px; position: center; padding: 10px;" />
        </dd>

        <dt>
            Điểm thi

        <dd>
            @Html.DisplayFor(model => model.diemthi)
        </dd>

        <dt>
            Tên lớp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LopHoc.tenlop)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin: 10px;">
            <input type="submit" value="Xóa" class="btn btn-default" style="border: 1px solid black;"/> |
            @Html.ActionLink("Quay lại", "Xemdanhsach")
        </div>
    }
</div>
